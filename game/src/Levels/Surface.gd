extends Area2D

export var fs_name := ''

# ▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒ métodos de Godot ▒▒▒▒
func _ready() -> void:
	connect('body_entered', self, '_assign_sfx')
	connect('body_exited', self, '_stop_sfx')

# ▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒ métodos privados ▒▒▒▒
func _assign_sfx(body: Node) -> void:
	if body.is_in_group('Actor'):
		body.surface = fs_name

func _stop_sfx(body: Node) -> void:
	if body.is_in_group('Actor'):
		body.surface = ''
